{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "../../dist/functions",
    "rootDir": "../..",
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": [
    "./**/*",
    "../../src/utils/debug.ts",
    "../../src/utils/openai.ts",
    "../../src/config/ai-prompts.ts",
    "../../src/config/constants.ts"
  ],
  "exclude": ["node_modules"]
}